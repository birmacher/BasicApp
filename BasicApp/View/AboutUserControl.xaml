<UserControl
    x:Class="BasicApp.View.AboutUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="{StaticResource AppName}" FontFamily="Global User Interface" Style="{StaticResource SnappedPageHeaderTextStyle}"></TextBlock>
            <TextBlock x:Name="licenseText" Text="Version Info" FontFamily="Global User Interface" Style="{StaticResource TitleTextStyle}"></TextBlock>
            <TextBlock x:Name="licenseDetail" Text="License Information" FontFamily="Global User Interface" Style="{StaticResource BodyTextStyle}"/>
            <Button x:Uid="Purchase" x:Name="PurchaseButton" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="100" IsEnabled="False" Click="PurchaseButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
